---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import PostLayout from "../../../layouts/PostLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("travel");

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<"blog">;
};

const { post } = Astro.props;
const {
  data: { title, description, date, author },
} = post;

const { Content } = await post.render();
---

<Layout {title} {description}>
  <PostLayout {title} {description} {date} {author}>
    <div
      class="flex flex-col gap-4 prose tracking-wide text-gray-300 p-10"
    >
      <Content class="flex items-start flex-col" />
    </div>
  </PostLayout>
</Layout>
